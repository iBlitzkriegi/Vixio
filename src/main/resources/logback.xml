<configuration>
    <appender name="STDOUT"
              class="ch.qos.logback.api.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>
    <root level="OFF">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>